<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="RecordActivity"
            type="inu.thebite.umul.activity.RecordActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C7FFFC">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cloud_container"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>




        <ImageButton
            android:id="@+id/game_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/game_start"
            android:background="@null"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/game_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/characters"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:src="@drawable/pull_carrot_1"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"
            android:layout_marginEnd="200dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="60dp" />


        <ImageView
            android:id="@+id/carrot_box"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/carrot_0"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:id="@+id/get_carrot"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/get_carrot"
            android:background="@null"
            android:scaleType="centerInside"
            android:onClick="@{RecordActivity::onClick}"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/characters"
            android:layout_marginBottom="20dp"/>

        <ImageButton
            android:id="@+id/get_chew"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/get_chew"
            android:background="@null"
            android:scaleType="centerInside"
            android:onClick="@{RecordActivity::onClick}"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/characters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/get_carrot"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>

        <ImageButton
            android:id="@+id/game_end_button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/game_end"
            android:background="@null"
            android:scaleType="centerInside"
            android:onClick="@{RecordActivity::onClick}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/game_back_press"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/game_back_pressed"
            android:background="@null"
            android:scaleType="centerInside"
            android:onClick="@{RecordActivity::onClick}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:adjustViewBounds="true"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>