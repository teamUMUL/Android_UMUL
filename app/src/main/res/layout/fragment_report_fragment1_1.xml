<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <FrameLayout
        android:id="@+id/graph_layout"
        android:layout_width="0dp"
        android:layout_height="267dp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/report_graph_background">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"/>



    </FrameLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:id="@+id/feedback_layout"
        app:layout_constraintTop_toBottomOf="@+id/graph_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/report_feedback_background">

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:layout_constraintTop_toBottomOf="@+id/feedback_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>








