<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="BMIFragment"
            type="inu.thebite.umul.fragment.bottomNavFragment.BMIFragment" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/reportLinearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/logo_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/umul_logo_main"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5" />

                <ImageButton
                    android:id="@+id/shopBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="21.5dp"
                    android:scaleType="centerInside"
                    android:onClick="onShopButtonClicked"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/shop" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="23.5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/bell" />
            </LinearLayout>

            <TextView
                android:id="@+id/bmiTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#BMI"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reportLinearlayout"
                android:layout_marginTop="17.51dp"
                android:layout_marginStart="28dp" />

            <FrameLayout
                android:id="@+id/bmi_half_pie_chart"
                android:layout_width="match_parent"
                android:layout_height="238dp"
                app:layout_constraintTop_toBottomOf="@+id/bmiTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bmi_half_pie_chart_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="자녀정보를 토대로 나온 BMI 수치에요!"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4D4F52"
                        android:gravity="center" />
                    <com.github.mikephil.charting.charts.PieChart
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"/>


                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/feedback_frame"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                app:layout_constraintTop_toBottomOf="@+id/bmi_half_pie_chart"
                android:background="@drawable/bmi_feedback_background"
                android:layout_marginTop="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/feedback_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{BMIFragment.feedback_title}"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:textSize="14sp"
                        android:textColor="#4D4F52"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/feedback_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{BMIFragment.feedback_first}"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="9dp"
                        android:textSize="14sp"
                        android:textColor="#404040" />

                    <TextView
                        android:id="@+id/feedback_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{BMIFragment.feedback_second}"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="9dp"
                        android:textSize="14sp"
                        android:textColor="#404040" />
                </LinearLayout>
            </FrameLayout>

            <ImageButton
                android:id="@+id/change_info_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/bmi_change_button"
                app:layout_constraintTop_toBottomOf="@+id/feedback_frame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_marginStart="87dp"
                android:layout_marginEnd="87dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/bmi_calc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#BMI 계산기"
                app:layout_constraintTop_toBottomOf="@+id/change_info_button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="23dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <FrameLayout
                android:id="@+id/calc_frame"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:background="@drawable/bmi_calc_background"
                app:layout_constraintTop_toBottomOf="@+id/bmi_calc_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="키와 몸무게를 토대로"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="16dp"
                        android:textSize="13sp"
                        android:textColor="#4D4F52"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="체질량 지수(BMI)를 계산해 드려요!"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="16dp"
                        android:textSize="13sp"
                        android:textColor="#4D4F52"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="신장"
                                android:layout_marginTop="14dp"
                                android:layout_marginStart="20dp"
                                android:textSize="13sp"
                                android:textColor="#4D4F52"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="체중"
                                android:layout_marginTop="14dp"
                                android:layout_marginStart="20dp"
                                android:textSize="13sp"
                                android:textColor="#4D4F52"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edit_height"
                                android:layout_width="136dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginStart="15dp"
                                android:background="@drawable/bmi_edit_info_background"
                                android:scaleType="fitCenter"
                                android:gravity="center" />

                            <EditText
                                android:id="@+id/edit_weight"
                                android:layout_width="136dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginStart="15dp"
                                android:background="@drawable/bmi_edit_info_background"
                                android:scaleType="fitCenter"
                                android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cm"
                                android:layout_marginStart="7dp"
                                android:layout_marginTop="18dp"
                                android:textSize="13sp"
                                android:textColor="#4D4F52"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="kg"
                                android:layout_marginStart="7dp"
                                android:layout_marginTop="18dp"
                                android:textSize="13sp"
                                android:textColor="#4D4F52"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/calc_button"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/bmi_calc_button"
                                android:layout_marginEnd="7dp"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:layout_marginStart="20dp"
                                android:onClick="@{BMIFragment::onClick}"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                            </ImageButton>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                app:layout_constraintTop_toBottomOf="@+id/calc_frame" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>
</layout>