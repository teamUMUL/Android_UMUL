<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="BalloonGameActivity"
            type="inu.thebite.umul.activity.BalloonGameActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/balloon_game_bg">

        <ImageView
            android:id="@+id/balloon_game_rabbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/balloon_rabbit_1"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/balloon_game_balloon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/balloon_1"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="200dp"
            app:layout_constraintStart_toStartOf="@+id/balloon_game_rabbit"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/balloon_game_pops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/balloon_pops"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/balloon_game_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_end_btn"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:onClick="@{BalloonGameActivity::onClick}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <ImageButton
            android:id="@+id/temp_balloon_inflate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/temp_balloon_inflate"
            android:background="@null"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:onClick="@{BalloonGameActivity::onClick}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/darkLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/balloon_game_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_start"
            android:background="@null"
            android:onClick="@{BalloonGameActivity::onClick}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/balloon_game_back_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_press"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:onClick="@{BalloonGameActivity::onClick}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>