<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/reportName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="#주간 리포트"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/week_report_img"
        android:lineSpacingExtra="1sp"
        android:gravity="center_vertical"
        android:textAppearance="@style/reportName"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/week_report_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/reportName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/week_report_img"
        android:scaleType="fitStart"/>


</androidx.constraintlayout.widget.ConstraintLayout>

